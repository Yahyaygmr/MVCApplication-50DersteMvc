
@{
    ViewBag.Title = "Satışlar";
    Layout = "~/Views/Shared/_ApplicationLayout.cshtml";
}

<h2>Satışlar</h2>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal1"> Satış Yap</button>
<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Satış Yap</h2>
            </div>
            <div class="modal-body">
                <form method="post" action="#">
                    <div>
                        <label>Ürün Adı</label>
                        <input type="text" name="Urun" class="form-control" />
                    </div>
                    <div class="mt-3">
                        <label>Müşteri</label>
                        <input type="text" name="Urun" class="form-control" />
                    </div>
                    <div class="mt-3">
                        <label>Adet</label>
                        <input type="text" name="Urun" class="form-control" />
                    </div>
                    <div class="mt-3">
                        <label>Fiyat</label>
                        <input type="text" name="Urun" class="form-control" />
                    </div>
                  
                    <div class="mt-5">
                       <button class="btn btn-primary">Satış Yap</button>
                       <button type="button" class="btn btn-danger" data-dismiss="modal">Vazgeç</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

