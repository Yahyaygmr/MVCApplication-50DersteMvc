@using MVCApplication.Models.Entity
@model List<Satislar>
@{
    ViewBag.Title = "Satiş Listesi";
    Layout = "~/Views/Shared/_ApplicationLayout.cshtml";
}

<h2>Satiş Listesi</h2>
<br />
<div class="conatiner">
    <a href="/Satis/Index" class="btn btn-outline-primary form-control">+ Satış Yap</a>
</div>
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Ürün</th>
        <th>Müşteri</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SatısId</td>
            <td>@item.Urunler.UrunAd</td>
            <td>@item.Musteriler.MusteriAd @item.Musteriler.MusteriSoyad</td>
            <td>@item.Adet</td>
            <td>@item.Fiyat</td>
            <td>
                <a href="/Urun/UrunSil/@item.SatısId" class="btn btn-sm btn-danger">Sil</a>
                <a href="/Urun/UrunGuncelle/@item.SatısId" class="btn btn-sm btn-info">Güncelle</a>
                <a href="#" class="btn btn-sm btn-success">Detay</a>
            </td>
        </tr>
    }
</table>

