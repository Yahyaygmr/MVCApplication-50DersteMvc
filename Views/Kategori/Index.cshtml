@using MVCApplication.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Kategoriler>
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_ApplicationLayout.cshtml";
}

<h2>Kategoriler</h2>
<br />
<div class="conatiner">
    <a href="/Kategori/YeniKategori" class="btn btn-outline-primary form-control">+ Yeni Kategori</a>
</div>
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Ad</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.KategoriId</td>
            <td>@item.KategoriAd</td>
            <td>
                <a href="/Kategori/KategoriSil/@item.KategoriId" class="btn btn-sm btn-danger">Sil</a>
                <a href="/Kategori/KategoriGuncelle/@item.KategoriId" class="btn btn-sm btn-info">Güncelle</a>
            </td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }), new PagedListRenderOptions { LiElementClasses = new string[] { "btn btn-outline-primary" } })