@using MVCApplication.Models.Entity
@model List<Kategoriler>
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_ApplicationLayout.cshtml";
}

<h2>Kategoriler</h2>
<br />
<div class="conatiner">
    <a href="#" class="btn btn-outline-primary form-control">+ Yeni Kategori</a>
</div>
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Ad</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.KategoriId</td>
            <td>@item.KategoriAd</td>
            <td>
                <a href="#" class="btn btn-sm btn-danger">Sil</a>
                <a href="#" class="btn btn-sm btn-info">Güncelle</a>
            </td>
        </tr>
    }
</table>
